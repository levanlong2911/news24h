<script is:client="load">
  document.querySelectorAll('.safe-ad-container[data-ad-script]').forEach(container => {
    const raw = decodeURIComponent(container.getAttribute('data-ad-script') || '');
    const wrapper = document.createElement('div');
    wrapper.innerHTML = raw;

    wrapper.childNodes.forEach(node => {
      if (node.nodeName === 'SCRIPT') {
        const newScript = document.createElement('script');
        [...node.attributes].forEach(attr => newScript.setAttribute(attr.name, attr.value));
        newScript.textContent = node.textContent;
        container.appendChild(newScript);
      } else {
        container.appendChild(node.cloneNode(true));
      }
    });
  });
</script>
