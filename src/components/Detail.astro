---
import type { Post } from "../types.ts";
import PostContent from "../components/PostContent.astro";
import type { AdItem } from "../types/ads";

const { post, relatedPosts, ads } = Astro.props as {
  post: Post;
  relatedPosts: Post[];
  ads?: Record<string, AdItem[]>;
};
