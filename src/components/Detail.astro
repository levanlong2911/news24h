---
<!-- <Advertisements position="top" /> -->
<section id="content">
  <div class="detail-title">
    <h1>{post.title}</h1>
  </div>
  <div class="detail-infor">
    <p>
      {post.admin?.name}
      |
      {new Date(post.updated_at).toLocaleDateString("en-US", {
        day: "numeric",
        month: "long",
        year: "numeric",
      })}
      |
      {post.category?.name}
    </p>
  </div>
  <div class="detail-content">
    <article class="post-body" set:html={post.content} />
    <!-- {paragraphs.map((segment, index) => (
      <>
        <article class="post-body" set:html={segment + '</p>'} />
